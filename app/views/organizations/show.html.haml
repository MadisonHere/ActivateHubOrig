- content_for :sidebar do
  #sidebar-welcome.sidebar-box= render 'site/welcome'
  #sidebar-event-details.sidebar-box
  #sidebar-wiki-props.sidebar-box= render 'site/wiki_props', :object => @organization, :clone => false


= render 'organizations/item', :organization => @organization

- collection_cache @future_events do
  %h2.future-events-title= t('.future_events.title')
  .future-events.events-list.list
    - if @future_events.any?
      = render 'events/list', :events => @future_events
    - else
      .no-events= t('.future_events.none')

- collection_cache @past_events do
  %h2.past-events-title= t('.past_events.title')
  .past-events.events-list.list
    - if @past_events.any?
      = render 'events/list', :events => @past_events
    - else
      .no-events= t('.past_events.none')
