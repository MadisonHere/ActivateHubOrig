:ruby
  type ||= raise ArgumentError, "type is required in view partial #{__FILE__}"


- content_for :css_insert do
  = stylesheet_link_tag 'forms'

- content_for :javascript_insert do
  = javascript_include_tag 'forms'


.type-form
  = semantic_form_for [:admin, type], :as => :type, :html => { :id => 'type-form' } do |f|
    = f.inputs do
      = f.input :name

      - if f.object.persisted?
        = f.input :enabled

    %li.trap
      = label 'trap', 'field', "Leave this field blank or we'll think you're a robot."
      = text_field_tag 'trap_field', params[:trap_field]

    = f.actions do
      = f.action :submit


:javascript
  // FIXME: shouldn't have to work around 'type' class css rule, should be scoped better
  $('form').removeClass('type');
